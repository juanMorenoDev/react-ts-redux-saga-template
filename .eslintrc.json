{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": [
    "prettier"
  ],
  "root": true,
  "plugins": ["react", "@typescript-eslint", "prettier"],
  "env": {
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "semi": false,
        "arrowParens": "avoid"
      }
    ],
    "quotes": ["error", "single"]
  }
}
